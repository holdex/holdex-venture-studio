mixin link(href, title)
	li(class="flex relative items-center text-cta text-t1 transition-colors hover:text-accent1-default before:content-['] before:absolute before:left-0 before:-bottom-1.5 before:w-full before:bg-transparent before:h-0.5")&attributes(attributes): a(class="text-inherit" href=href)= title

.app-container(data-theme="{pageTheme}")
	header(class!="z-10 w-full block  relative {scrollY > 1 ? 'sticky top-0 border-b border-solid border-l4 bg-l1' : ''}")
		.header-wrapper(class="flex px-4 py-3 justify-center items-center w-full")
			.container(class="max-w-[1240px] flex items-center justify-between")
				.logo-wrapper(class="z-1 relative")
					a(class="relative flex w-7 h-7" href="/"): img(alt="Home" src="/logo-w-o-text.svg")
				ul(class="absolute left-1/2 -translate-x-1/2 main-nav flex items-start gap-8 py-4" role="navigation")
					+link("/about", "About")(class!="{isActive(path,'/about', true) ? '!text-accent1-default before:!bg-accent1-default' : ''}")
					+link("/c?filter=portfolio", "Portfolio")(class!="{isFilterActive($page.url,'/c', 'portfolio') ? '!text-accent1-default before:!bg-accent1-default' : ''}")
					+link("/?filter=startups", "For Startups")(class!="{isFilterActive($page.url,'/c', 'startups') ? '!text-accent1-default before:!bg-accent1-default' : ''}")
					+link("/c/jobs", "Jobs")(class!="{isActive(path,'/c/jobs') ? '!text-accent1-default before:!bg-accent1-default' : ''}")
					+link("/c?filter=partners", "Partners")(class!="{isFilterActive($page.url,'/c', 'partners') ? '!text-accent1-default before:!bg-accent1-default' : ''}")
				button(type="button" on:click="{handleClick}" class="relative z-1 bg-accent1-default text-t4 text-cta shadow-button flex items-center justify-center py-1 px-4 rounded-xl transition-all focus:bg-accent1-default hover:bg-accent1-active hover:shadow-button-hover"): span Partner With Us
	main: slot
	footer(class="mt-16 xs:mt-8 flex flex-col items-center w-full")
		.contact-form(class="w-full relative flex flex-col items-center bg-l1 border-t border-b border-solid border-l4 py-8 px-4" id="contact-form")
			form(class="max-w-[604px] w-full" method="POST" action="/")
				h4(class="text-h4-l font-satoshi text-t1 mb-4") Contact us
				p(class="text-paragraph-l text-t2 mb-4") Weâ€™d love to hear from you on discussing potential projects, intriguing ideas, and new opportunities.
				.input-group(class="mb-4")
					textarea(
						rows="{4}"
						required
						value!="{form?.message ?? ''}"
						class="relative w-full border border-solid border-l4 bg-l2 shadow-input rounded-xl p-2.25 text-footnote text-t1 transition-all placeholder:text-footnote placeholder:opacity-100 placeholder:text-t3 hover:border-accent1-default autofill:fill-t1 autofill:hover:text-t3" 
						name="message" 
						placeholder="How can we help you?")
				.input-group(class="mb-4 gap-4 flex")
					input(
						type="text" 
						name="name" 
						required
						value!="{form?.name ?? ''}"
						class="relative w-1/2 border border-solid border-l4 bg-l2 shadow-input rounded-xl p-2.25 text-footnote text-t1 transition-all placeholder:text-footnote placeholder:opacity-100 placeholder:text-t3 hover:border-accent1-default autofill:fill-t1 autofill:hover:text-t3" 
						placeholder="Your name and company")
					input(
						type="email"
						required
						pattern="{regExp.email}"
						value!="{form?.email ?? ''}"
						name="email" 
						class="relative w-1/2 border border-solid border-l4 bg-l2 shadow-input rounded-xl p-2.25 text-footnote text-t1 transition-all placeholder:text-footnote placeholder:opacity-100 placeholder:text-t3 hover:border-accent1-default autofill:fill-t1 autofill:hover:text-t3" 
						placeholder="Your email address")
				button(
					type="submit"
					disabled!="{!form?.email && !form?.name && !form?.message}" 
					class="relative z-1 bg-accent1-default text-t4 text-cta shadow-button flex items-center justify-center py-1 px-4 rounded-xl transition-all focus:bg-accent1-default hover:bg-accent1-active hover:shadow-button-hover disabled:cursor-not-allowed disabled:bg-l3 disabled:shadow-button disabled:text-t3"): span Submit
		.footer-nav(class="flex items-center justify-between tbDown:flex-col tbDown:items-start tbDown:py-6 tbDown:gap-6 py-4 px-4 max-w-[1240px] w-full")
			.logo-wrapper(class="z-1 relative")
				a(class="relative flex w-24 h-7" href="/"): img(alt="Home" src="/logo-white-w-text.svg")
			ul(class="absolute left-1/2 -translate-x-1/2 main-nav flex items-start gap-8 tbDown:relative tbDown:left-0 tbDown:transform-none" role="navigation")
				+link("https://policies.holdex.io/#/terms", "Terms of Use")(target="_blank" rel="noreferrer")
				+link("https://policies.holdex.io/#/privacy", "Privacy Policy")(target="_blank" rel="noreferrer")
				+link("https://policies.holdex.io/#/disclaimer", "Disclaimer")(target="_blank" rel="noreferrer")
			.social-icons(class="flex items-center justify-end gap-4 z-1 relative")
				a(class="flex flex-col items-center justify-center w-8 h-8 p-1 text-t1 transition-colors hover:text-accent1-default" href="https://www.linkedin.com/company/holdexlimited/" target="_blank" rel="noopener noreferrer") {@html socialIcons.linkedin}
				a(class="flex flex-col items-center justify-center w-8 h-8 p-1 text-t1 transition-colors hover:text-accent1-default" href="https://github.com/holdex" target="_blank" rel="noopener noreferrer") {@html socialIcons.github}
				a(class="flex flex-col items-center justify-center w-8 h-8 p-1 text-t1 transition-colors hover:text-accent1-default" href="https://twitter.com/HoldexIo" target="_blank" rel="noopener noreferrer") {@html socialIcons.twitter}
				a(class="flex flex-col items-center justify-center w-8 h-8 p-1 text-t1 transition-colors hover:text-accent1-default" href="https://t.me/holdex" target="_blank" rel="noopener noreferrer") {@html socialIcons.telegram}