
// main section
mixin main-section
  section.main(class="flex flex-col items-center pt-16 xs:pt- gap-19")
    block

// hero section
mixin section-hero-wrapper
  .section-hero-wrapper(class="flex flex-col items-center justify-center bg-gray-100 gap-8 max-w-[1028px] w-full xs:px-4")
    block

// KPIs section
mixin section-kpis-wrapper
  .section-hero-wrapper(class="smDown:px-4 flex flex-col items-center justify-center bg-gray-100 gap-8 max-w-[1028px] w-full xs:px-4")
    block

mixin companiesStrip
  .companiesStrip(
    class="flex items-center justify-center smDown:justify-start smDown:items-start max-w-[1028px] tb:max-w-[794px] smDown:max-w-[604px] xs:px-4 w-full"
  )&attributes(attributes)
    block

mixin content-wrapper
  .content-wrapper(class="flex items-start flex-col gap-8 xs:gap-4 max-w-[604px] w-full xs:px-4")&attributes(attributes)
    block

mixin wrap-dark
  section(class="hidden dark:block rounded-base-radius bg-gradient-to-r" style="background-image: linear-gradient(to bottom right, #1C202D 30%, #10141F 45%); padding: 0.1rem;")
   div(class="h-full rounded-base-radius bg-l1 p-2 gap-4")
      div(class="rounded-underbase bg-gradient-to-r py-10" style="background-image: linear-gradient(to bottom right, #393F4F 20%, #10141F 40%); padding: 0.15rem;")
        div(class=" h-full rounded-underbase bg-l1 gap-4 ")
          div(class="h-full rounded-underbase bg-subcontainer-gradient px-12 py-10 gap-4 xs-up:grid xs-up:grid-cols-1 sm-up:grid sm-up:grid-cols-3 md-up:grid-cols-3 lg-up:grid-cols-3 xl-up:grid-cols-3 ")
            block

mixin wrap-light
  section(class="block dark:hidden rounded-base-radius bg-gradient-to-r" style="background-image: linear-gradient(to bottom right, #D8D9E0 30%, #F0F1F5 45%); padding: 0.1rem;")
    div(class="h-full rounded-base-radius bg-l2 p-2 gap-4")
      div(class="rounded-underbase bg-gradient-to-r py-10" style="background-image: linear-gradient(to bottom right, #CACDD8 30%, #F0F1F5 40%); padding: 0.15rem;")
        div(class="h-full rounded-underbase bg-l2 gap-4 ")
          div(class="h-full rounded-underbase bg-subcontainer-gradient-light px-12 py-10 gap-4 xs-up:grid xs-up:grid-cols-1 sm-up:grid sm-up:grid-cols-3 md-up:grid-cols-3 lg-up:grid-cols-3 xl-up:grid-cols-3")
            block

mixin wrap-subcontainer(kpiValue, kpiDescription)
  div(class="rounded-underbase bg-gradient-to-r")
    div(class="h-full rounded-underbase w-full p-8")
      h3(class="text-subtitle-xl font-medium text-accent1-default font-inter text-center") #{kpiValue}
      p(class="text-subtitle-s font-inter mt-3 text-center") #{kpiDescription}

mixin cta(normalTextBefore, underlinedText, normalTextAfter, link)
  p(class="text-subtitle-l text-center mb-8")
    | #{normalTextBefore}
    a(class="relative inline-block underline underline-offset-4 bg-accent1-default/15 text-accent1-default  transition-colors hover:bg-accent1-default/25 focus:bg-accent1-default/25" href=link)
      | #{underlinedText}
    | #{normalTextAfter}


