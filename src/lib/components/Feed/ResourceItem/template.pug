article.block(class!="text-h3-l font-satoshi xs:text-h3-s {className}")
  p.mb-4.font-inherit
    Link(item=`{{href: '/c/'+message.communitySlug+'/'+message.messageSlug, iconSize: 24}}`) {message.title}
  TextParagraph.mb-4(class="text-t2") {message.subtitle}
  +if('message.hashtags && message.hashtags.length > 0')
    ul.relative.flex.items-start.gap-2.flex-wrap.w-full.list-none
      +each('message.hashtags as tag, index')
        +if('index !== 0')
          li.text-paragraph-l(class="text-t3/50") &bull;
        li.underline.underline-offset-4.text-accent1-default.text-inter.h-8.text-paragraph-l(
          class="bg-accent1-default/15"
        )
          Hashtag(item="{tag}" link="/c?filter={tag}") 
            | {'#'}{tag}
