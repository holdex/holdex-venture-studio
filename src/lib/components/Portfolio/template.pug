mixin metricContainer(className = "")
  .metric(class=`font-satoshi flex flex-col gap-3.625 ${className}`)
    block

mixin metricTitle(title)
  p.metric-title(class="text-footnote text-t3")= title

mixin metricValue(value)
  h4.metric-value(class="text-t1")= value

mixin metricValueLogos
  Marquee(pauseOnHover direction="left" speed=100 class="w-full" gap="24px")
    block

mixin logoImg(value)
  img(
    class="logo-img h-7.25 mobile:h-6 filter invert dark:invert-0"
    src="/portfolioLogo/investor/" + value + ".svg"
    alt=value
  )

mixin metric(type, value = null)
  case type
    when "totalLoansOriginated"
      +metricContainer("smDown:gap-2 min-w-[180px]")
        +metricTitle("Total Loans Originated")
        +metricValue(value)
    when "totalValueLocked"
      +metricContainer("smDown:gap-2 min-w-[180px]")
        +metricTitle("Total Value Locked")
        +metricValue(value)
    when "totalFunding"
      +metricContainer("smDown:gap-2 min-w-[180px]")
        +metricTitle("Total Funding")
        +metricValue(value)
    when "marketCapitalization"
      +metricContainer("smDown:gap-2 min-w-[180px]")
        +metricTitle("Market Capitalization")
        +metricValue(value)
    when "reservesInUsd"
      +metricContainer("smDown:gap-2 min-w-[180px]")
        +metricTitle("Reserves in USD")
        +metricValue(value)
    when "founders"
      +metricContainer("smDown:gap-2 w-full")
        +metricTitle("Founders")
        +metricValue(value)
    when "borrowers"
      +metricContainer("w-full")
        +metricTitle("Borrowers")
        +metricValueLogos
          block
    when "investors"
      +metricContainer("w-full")
        +metricTitle("Investors")
        +metricValueLogos
          block
    when "ecosystemPartners"
      +metricContainer("w-full")
        +metricTitle("Ecosystem Partners")
        +metricValueLogos
          block

article.portfolio-product-card(
  class="group w-full h-full rounded-xl flex flex-col bg-l1 border border-l4 px-8 py-7.25 smDown:px-4 smDown:py-6 justify-between {isFeatured ? 'gap-16 smDown:gap-12' : 'gap-6'}"
)
  .portfolio-product-body(class="flex flex-col w-full gap-7.25 smDown:gap-4")
    div(class="relative flex flex-col w-full gap-3.625 smDown:gap-3.25")
      h3(class="portfolio-product-title leading-[29px]")
        Link(item="{{href: slug, text: title, title: title}}")= `{title}`
      TextParagraph {subtitle}

    +if("isFeatured == true")
      TextParagraph {description}
      .portfolio-metrics(class="w-full flex flex-wrap gap-7.25 smDown:flex-col smDown:gap-6")
        +if("totalLoansOriginated")
          +metric("totalLoansOriginated", "{formattedTotalLoansOriginated}")
        +if("totalValueLocked")
          +metric("totalValueLocked", "{formattedTotalValueLocked}")
        +if("reservesInUsd")
          +metric("reservesInUsd", "{formattedReservesInUsd}")
        +if("totalFunding")
          +metric("totalFunding", "{formattedTotalFunding}")
        +if("marketCapitalization")
          +metric("marketCapitalization", "{formattedmarketCapitalization}")
        +if("founders")
          +metric("founders", "{founders}")
        +if("borrowers")
          +metric("borrowers")
            +each("JSON.parse(borrowers) as borrower")
              +logoImg("{borrower}")
        +if("investors")
          +metric("investors")
            +each("JSON.parse(investors) as investor")
              +logoImg("{investor}")
        +if("ecosystemPartners")
          +metric("ecosystemPartners")
            +each("JSON.parse(ecosystemPartners) as ecosystemPartner")
              +logoImg("{ecosystemPartner}") 

  +if("JSON.parse(hashtags) && JSON.parse(hashtags).length > 0")
    ul.relative.flex.items-start.gap-2.flex-wrap.w-full.list-none
      +each("JSON.parse(hashtags) as tag, index")
        li(class="text-inter h-7.25 text-paragraph-l smDown:text-paragraph-s")
          Hashtag(
            item="{tag}"
            link="{emptyTags.indexOf(tag) !== -1 ? undefined : `/c?filter=${tag}`}"
          )
            | {'#'}{tag}
