mixin content
  +if('icon')
    Icon(
      icon="{icon}"
      width="{iconSize}"
      height="{iconSize}"
      colorInherit
      isOutlined="{$$restProps.isOutlined}"
    )
  +if('label')
    span(class="text-nowrap shrink-0") {label}
  slot

+if('href')
  a.no-underline(
    {...$$restProps}
    use:forwardAction
    disabled="{disabled}"
    style:width!="{fixedTo || 'auto'}"
    bind:this="{forwardRef}"
    class="{btnClass}"
    href="{href}"
    target="{isHoldexLink || isInternalLink ? '' : '_blank'}"
    rel="{isHoldexLink || isInternalLink ? '' : 'noopener noreferrer'}"
  )
    +content
  +else
    button(
      {...$$restProps}
      use:forwardAction
      disabled="{disabled}"
      style:width!="{fixedTo || 'auto'}"
      bind:this="{forwardRef}"
      class="{btnClass}"
      type="{btnType}"
      on:click!="{clickHandler}"
    )
      +content
