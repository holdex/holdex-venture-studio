Switch(condition="{item.type}")
    Case(value="link")
        a(
            class="relative underline bg-accent1-default/20 text-accent1-default text-paragraph-l transition-colors hover:bg-opacity-25"
            href="{item.href}"
            title!="{item.title ? item.title : ''}"
        )
            TextWrapper(text="{item.text || item.href}")
                slot
    Case(value="video")
        s handle video
    Case(value="hashtag")
        a(
            class="relative underline bg-accent1-default/20 text-accent1-default text-paragraph-l transition-colors hover:bg-opacity-25"
            href="/c?q={encodeURIComponent(item.text.toLowerCase().slice(1))}"
        )
            TextWrapper(text="{item.text}")
    Case(value="code")
        s handle code 
    Case(value="price-ticker")
        s handle price ticker
    Case(value="mention")
        s handle mention
    Case(value="image")
        s handle image
    Case(value="text")
        TextWrapper(text!="{escape(item.text)}")
    Case(value="inline")
        TextWrapper(text="{item.text}")