mixin table-cell
  +if("typeof cellContents === 'object'")
    +each('cellContents as content')
      Item(item="{content}" isTableCell)
    +else
      Item(item="{cellContents}" isTableCell)

mixin table-scroll-shades
  .div(class="w-full flex absolute h-full")
    .div(class="right-shade-spacer")
    .div(
      class="h-full w-24 {isLeftEnd ? 'hidden' : 'border-l4 border-l bg-gradient-to-r to-transparent from-s1'} z-40"
      use:scrollAction
    )
    .div(
      class="h-full rounded-xl border-r border-l4 right-0 w-24 absolute {isRightEnd ? 'hidden' : 'bg-gradient-to-l to-transparent from-s1'} z-40 {mobile?'':'hidden'}"
      use:scrollAction
    )

+table-scroll-shades
.relative.overflow-auto(use:scrollAction class="rounded-xl")
  table(class="border-separate border-spacing-0" id="table-scroll")
    +each('cells as row, rowIndex')
      thead
        tr
          +each('row as cellContents, colIndex')
            +if('rowIndex === 0')
              +if('colIndex === 0')
                th(
                  class="text-left left-0 sticky bg-l2 px-3 text-footnote font-bold border-solid border-l border-t border-l4 first:rounded-tl-xl"
                  scope="col"
                )
                  +table-cell
                +else
                  th(
                    class="max-w-[200px] bg-l2 text-left py-1.5 px-3 text-footnote font-bold border-solid border-l last:border-r border-t border-l4 first:rounded-tl-xl last:rounded-tr-xl"
                    scope="col"
                  )
                    +table-cell
      tbody
        tr
          +each('row as cellContents, colIndex')
            +if('rowIndex != 0')
              +if('colIndex === 0')
                td(
                  class="bg-l1 left-0 sticky px-3 text-t2 text-footnote border-solid border-l  border-t border-l4 last:border-r {rowIndex === cells.length - 1 ? 'first:rounded-bl-xl last:rounded-br-xl border-b': ''}"
                )
                  +table-cell
                +else
                  td(
                    class="max-w-[200px] bg-l1 py-1.5 px-3 text-footnote border-solid border-l border-t border-l4 last:border-r {rowIndex === cells.length - 1 ? 'first:rounded-bl-xl last:rounded-br-xl border-b': ''}"
                  )
                    +table-cell
